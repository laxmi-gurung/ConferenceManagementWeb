
@{
    ViewBag.Title = "Organizer List";
}
    <div class="text-center" , style="background-color: lightslategray;">
        <h1 class="display-4" , style="color:white;">Organizers</h1>
    </div>
    <a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Organizer" asp-action="Create">Add New Organizers</a>
<div class="card-deck">
    @foreach (var organizer in Model)
    {
        <div class="card m-3">
            <div class="card-header text-center">
                <img src="~/Images/individual.png" />
                <h3>@organizer.Name</h3>
            </div>
            <div class="card-footer text-center">
                <a href="/Organizer/Details/@organizer.Id" class="btn btn-primary">View</a>
            </div>
        </div>
    }
</div>